---
import type { GetStaticPaths } from 'astro';
import { render } from 'astro:content';
import { getEntry } from 'astro:content';
import { getCollection } from 'astro:content';
import Base from '../../partials/base.astro';

// generate the page
export const getStaticPaths = (async () => {
    let all = await getCollection("recipe");
    return all.map(e => ({
        params: {recipe: e.id},
        props: { article: e}
    }));
}) satisfies GetStaticPaths;

// produce the page
const { article } = Astro.props;
const { Content } = await render(article);

const {title, author, date, tags} = article.data;

let auth_obj = await getEntry(
    author.collection,
    author.id.toLowerCase().replaceAll(" ", "-"),
);

---
<Base title={title} desc=`${title} by ${author}` author={author.id}>
    <div>
        <header>
            <a class="brand-logo" href="/">
                <img src="/favicon/android-chrome-512x512.png" alt="Tapirus Cooking" width="96" height="96" />
            </a>
            <h1>{title}</h1>
            <div id="links">
            <h2><a href="/">Home</a></h2>
            <!-- @ts-ignore -->
            <h2><a href=`/author/${auth_obj.id}`>Author</a></h2>
            <h2><a id="back">Back</a></h2>
            </div>
        </header>
        <hr>
        <article>
            <Content />
        </article>
		<hr>
        <h3>Tags</h3>
		<ul>	
			{tags.map(e => <li><a id=`tag-${e}` href=`/tag/${e}` >{e}</a></li>)}
		</ul>	
    </div>
</Base>
<style>
    header {
        display: flex;
        flex-direction: column;
        margin: 40px;
        align-items: center;
    }
    h1 {
        margin: 0;
        font-size: 4rem;
        text-align: center;
    }
    #links {
        display: flex;
    }
    h2 {
        margin: 0;
        padding: 10px;
    }
    article {
        max-width: 800px;
        margin: auto;
    }
    h3 {
        text-align: center;
        font-size: 1.5rem;
        margin: 0;
    }
    ul {
        display: flex;
        justify-content: center;
        padding: 0;
    }
    li {
        list-style: none;
        padding: 10px;
    }
</style>
<!-- is:global is required to reach inside the Content element -->
<style is:global>
    img {
        max-width: 400px;
        max-height: 400px;
        margin: auto;
        margin-top: 20px;
        margin-bottom: 20px;
        display: block;
        border-radius: 10px;
    }
    /* Recipe tables: subtle outer border, lighter row separators, stronger header rule. */
    article table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        border: 1px solid var(--second);
        font-variant-numeric: tabular-nums;
    }
    article th,
    article td {
        padding: 6px 10px;
        vertical-align: top;
    }
    article thead th {
        font-weight: 700;
        border-bottom: 2px solid var(--second);
    }
    article tbody tr + tr td,
    article tbody tr + tr th {
        border-top: 1px solid var(--faded);
    }
</style>
